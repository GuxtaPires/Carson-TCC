<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorPrimary"
            android:contentDescription="@string/desc_back" />

        <ImageView
            android:id="@+id/imgSecurityIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/desc_app_logo" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="@string/change_password"
            android:textColor="?attr/colorOnSurface"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            style="@style/FormLabel"
            android:text="@string/label_current_password" />

        <EditText
            android:id="@+id/edtCurrentPassword"
            style="@style/roundedField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurface"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_current_password"
            android:inputType="textPassword" />


        <TextView
            style="@style/FormLabel"
            android:text="@string/label_new_password" />

        <EditText
            style="@style/roundedField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp"
            android:id="@+id/edtNewPassword"
            android:hint="@string/hint_new_password"
            android:textColorHint="?attr/colorOnSurface"
            android:inputType="textPassword" />

        <TextView
            style="@style/FormLabel"
            android:text="@string/label_confirm_new_password" />

        <EditText
            style="@style/roundedField"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp"
            android:inputType="textPassword"
            android:id="@+id/edtConfirmNewPassword"
            android:hint="@string/hint_confirm_new_password"
            android:textColorHint="?attr/colorOnSurface" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="@string/btn_save_password"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>