<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F6FFF6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="20dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageButton
                        android:id="@+id/btnSair"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_back"
                        android:contentDescription="@string/desc_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:tint="#2B7A2B"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_panel_title"
                            android:textColor="#2B7A2B"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/admin_panel_subtitle"
                            android:textColor="#666"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_logo"
                        android:contentDescription="@string/desc_app_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginEnd="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_profile"
                                app:tint="#2B7A2B"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="@null"/>

                            <TextView
                                android:id="@+id/tvUsuarios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#2B7A2B" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_users_count"
                                android:textSize="14sp"
                                android:textColor="#555" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginStart="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_med"
                                app:tint="#2B7A2B"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="@null"/>

                            <TextView
                                android:id="@+id/tvDescarte"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#2B7A2B" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_disposals_count"
                                android:textSize="14sp"
                                android:textColor="#555" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Button
                    android:id="@+id/btnAddPonto"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/btn_new_disposal_point"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="#16A34A"
                    android:textColor="#FFF"
                    app:cornerRadius="30dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_current_map_points"
                    android:textColor="#333"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="4dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="80dp">

                    <fragment
                        android:id="@+id/mapModerador"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomsheet_bg"
        android:elevation="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <View
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:background="#DDDDDD"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#CCC"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_new_collection_point"
                android:textSize="20sp"
                android:textColor="#2B7A2B"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/etNomePonto"
                style="@style/roundedField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_place_name_example"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:textColorHint="#555555" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etTipoPonto"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="@string/hint_place_type"
                    android:layout_marginEnd="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />

                <EditText
                    android:id="@+id/etCep"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="@string/hint_zip_code"
                    android:inputType="number"
                    android:maxLength="9"
                    android:layout_marginStart="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etRua"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="48dp"
                    android:hint="@string/hint_address"
                    android:inputType="textPostalAddress"
                    android:layout_marginEnd="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />

                <EditText
                    android:id="@+id/etNumero"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="@string/hint_number"
                    android:inputType="number"
                    android:layout_marginStart="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />
            </LinearLayout>

            <EditText
                android:id="@+id/etBairro"
                style="@style/roundedField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_neighborhood"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:textColorHint="#555555" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etCidade"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="48dp"
                    android:hint="@string/hint_city"
                    android:inputType="textCapWords"
                    android:layout_marginEnd="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />

                <EditText
                    android:id="@+id/etEstado"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="@string/hint_state"
                    android:maxLength="2"
                    android:inputType="textCapCharacters"
                    android:layout_marginStart="6dp"
                    android:textColor="#000000"
                    android:textColorHint="#555555" />
            </LinearLayout>

            <EditText
                android:id="@+id/etComplemento"
                style="@style/roundedField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/hint_complement_optional"
                android:layout_marginBottom="24dp"
                android:textColor="#000000"
                android:textColorHint="#555555" />

            <Button
                android:id="@+id/btnSalvarPonto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_save_point"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:backgroundTint="#2B7A2B" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>