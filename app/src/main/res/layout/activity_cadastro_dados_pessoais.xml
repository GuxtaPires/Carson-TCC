<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FFF6"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo (substitua @drawable/ic_logo pelo seu ícone) -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="Logo"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2B7A2B"
            android:layout_marginBottom="12dp" />

        <!-- Nome completo -->
        <EditText
            android:id="@+id/etNome"
            style="@style/roundedField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nome completo"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            android:layout_marginBottom="10dp" />

        <!-- Linha com Data de nascimento + E-mail -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etData"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="XX/XX/XXXX"
                android:inputType="date" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Gênero + CPF -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <Spinner
                android:id="@+id/spinnerGenero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_rounded"
                android:paddingLeft="12dp"
                android:entries="@array/generos_array"
                android:prompt="@string/sexo_prompt"
                android:layout_marginRight="8dp" />

            <EditText
                android:id="@+id/etCpf"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="CPF"
                android:inputType="number"
                android:maxLength="14" />
        </LinearLayout>

        <!-- CEP + Endereço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etCep"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="CEP"
                android:inputType="number" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEndereco"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Endereço"
                android:inputType="textPostalAddress" />
        </LinearLayout>

        <!-- N° + Cidade + UF (três colunas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etNumero"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="48dp"
                android:hint="Nº"
                android:inputType="number" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etCidade"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="3.2"
                android:layout_height="48dp"
                android:hint="Cidade"
                android:inputType="textCapWords" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etUf"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="UF"
                android:inputType="text"
                android:maxLength="2" />
        </LinearLayout>

        <!-- Bairro + Complemento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etBairro"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Bairro"
                android:inputType="textCapWords" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etComplemento"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Complemento"
                android:inputType="text" />
        </LinearLayout>

        <!-- Senha + Confirmar senha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="18dp">

            <EditText
                android:id="@+id/etSenha"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Senha"
                android:inputType="textPassword" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etConfirmSenha"
                style="@style/roundedField"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Confirme sua senha"
                android:inputType="textPassword" />
        </LinearLayout>

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="230dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#16A34A"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
