<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc_back"
            android:src="@drawable/ic_arrow_back"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/txtLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/colorPrimary"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/logoHeader"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/desc_app_logo"
            android:src="@drawable/ic_logo" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="150dp">

            <ImageView
                android:id="@+id/logoMain"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/desc_app_logo"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/title_create_account"
                android:textColor="?attr/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNome"
                style="@style/roundedField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:hint="@string/hint_full_name"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/etData"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_date"
                    android:inputType="number"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etEmail"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/spinnerGenero"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/edit_text_rounded"
                    android:paddingLeft="12dp"
                    android:entries="@array/generos_array" />

                <EditText
                    android:id="@+id/etCpf"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_cpf"
                    android:inputType="number"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/etCep"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_zip_code"
                    android:inputType="number"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etEndereco"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_address"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/etNumero"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1.2"
                    android:hint="@string/hint_number"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etCidade"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="3.2"
                    android:hint="@string/hint_city"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etUf"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_state"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/etBairro"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_neighborhood"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etComplemento"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_complement"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/etSenha"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />

                <Space android:layout_width="8dp" android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etConfirmSenha"
                    style="@style/roundedField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_confirm_password"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurface" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCadastrar"
                android:layout_width="230dp"
                android:layout_height="56dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="@string/btn_register"
                android:textColor="?attr/colorOnPrimary"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>