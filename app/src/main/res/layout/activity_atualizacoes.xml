<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FFF6">

    <!-- ====== CONTEÚDO PRINCIPAL ====== -->
    <RelativeLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F6FFF6">

        <!-- ====== BARRA SUPERIOR ====== -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <!-- botão do menu lateral -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile"
                android:contentDescription="Menu"
                app:tint="#2B7A2B" />

            <TextView
                android:id="@+id/txtLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carson"
                android:textColor="#2B7A2B"
                android:textStyle="italic"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="Logo" />
        </LinearLayout>

        <!-- ====== CONTEÚDO PRINCIPAL ====== -->
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:layout_above="@id/bottom_nav"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/containerPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtAtualizacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atualizações"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2B7A2B"
                    android:layout_marginBottom="16dp" />

                <!-- ====== CARDS ====== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/card_post_background"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post XPTO1"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/card_post_background"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notícia XPTO12"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/card_post_background"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post XPTO123"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- ====== BOTÃO FLOATING (Adicionar) ====== -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Adicionar"
            app:tint="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="70dp" />

        <!-- ====== BOTTOM NAVIGATION BAR ====== -->
        <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_loc"
                android:contentDescription="Perfil"
                app:tint="@color/icon_tint_positive"
                android:layout_marginHorizontal="18dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_med"
                android:contentDescription="Câmera"
                app:tint="@color/icon_tint_positive"
                android:layout_marginHorizontal="18dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="@color/icon_tint_positive"
                android:layout_marginHorizontal="18dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_news"
                android:contentDescription="Notícias"
                app:tint="@color/icon_tint_positive"
                android:layout_marginHorizontal="18dp" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Buscar"
                app:tint="@color/icon_tint_positive"
                android:layout_marginHorizontal="18dp" />
        </LinearLayout>

    </RelativeLayout>

    <!-- ====== MENU LATERAL ====== -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#C6F4D6"
        app:menu="@menu/menu_lateral"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
